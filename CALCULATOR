
def calculator():
    print("üßÆ Welcome to the Simple Calculator!\n")

    try:
        num1 = float(input("Enter the first number: "))
        num2 = float(input("Enter the second number: "))

        print("\nChoose an operation:")
        print("1. ‚ûï Addition")
        print("2. ‚ûñ Subtraction")
        print("3. ‚úñÔ∏è Multiplication")
        print("4. ‚ûó Division")

        choice = input("Enter choice (1/2/3/4): ")

        if choice == "1":
            result = num1 + num2
            print(f"\nResult: {num1} + {num2} = {result}")
        elif choice == "2":
            result = num1 - num2
            print(f"\nResult: {num1} - {num2} = {result}")
        elif choice == "3":
            result = num1 * num2
            print(f"\nResult: {num1} * {num2} = {result}")
        elif choice == "4":
            if num2 != 0:
                result = num1 / num2
                print(f"\nResult: {num1} / {num2} = {result}")
            else:
                print("‚ö†Ô∏è Error: Cannot divide by zero.")
        else:
            print("‚ö†Ô∏è Invalid operation choice.")

    except ValueError:
        print("‚ùå Error: Please enter valid numbers.")

calculator()
